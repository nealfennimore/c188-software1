<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<GridPane 
   fx:controller="org.openjfx.software1.MainScreenController" xmlns:fx="http://javafx.com/fxml/1" 
   alignment="CENTER" hgap="10" vgap="10"> 
    <padding>
    </padding>
    
    <Label text="Inventory Management System"                
        GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <BorderPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <top>
            <HBox spacing="10" alignment="bottom_right">
                <Label text="Parts" />
                <Button text="Search" />
                <TextField fx:id="searchParts" promptText="" prefWidth="150"/>
            </HBox>
        </top>
        <center>
            <TableView fx:id="parts">
                <columns>
                    <TableColumn text="Part ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="partID" />
                        </cellValueFactory>  
                    </TableColumn>
                    <TableColumn text="Part Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="partName" />
                        </cellValueFactory>  
                    </TableColumn>
                    <TableColumn text="Inventory Level">
                        <cellValueFactory>
                            <PropertyValueFactory property="partInventory" />
                        </cellValueFactory>  
                    </TableColumn>
                    <TableColumn text="Price/Cost Per Unit">
                        <cellValueFactory>
                            <PropertyValueFactory property="partPrice" />
                        </cellValueFactory>  
                    </TableColumn>
               </columns> 
            </TableView>
        </center>
        <bottom>
            <HBox spacing="10" alignment="top_right"> 
                <Button text="Add" />
                <Button text="Modify" />
                <Button text="Delete" />
            </HBox>
        </bottom>
    </BorderPane>
    <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="1">
        <top>
            <HBox spacing="10" alignment="bottom_right">
                <Label text="Products" />
                <Button text="Search" />
                <TextField fx:id="searchProducts" promptText="" prefWidth="150"/>
            </HBox>
        </top>
        <center>
            <TableView fx:id="products">
                <columns>
                    <TableColumn text="Product ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="productID" />
                        </cellValueFactory>  
                    </TableColumn>
                    <TableColumn text="Product Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="productName" />
                        </cellValueFactory>  
                    </TableColumn>
                    <TableColumn text="Inventory Level">
                        <cellValueFactory>
                            <PropertyValueFactory property="productInventory" />
                        </cellValueFactory>  
                    </TableColumn>
                    <TableColumn text="Price Per Unit">
                        <cellValueFactory>
                            <PropertyValueFactory property="productPrice" />
                        </cellValueFactory>  
                    </TableColumn>
               </columns>   
            </TableView>
        </center>
        <bottom>
            <HBox spacing="10" alignment="top_right"> 
                <Button text="Add" />
                <Button text="Modify" />
                <Button text="Delete" />
            </HBox>
        </bottom>
    </BorderPane>
</GridPane>